<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voting Page</title>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
</head>
<body>
    <h1>Vote for Your Favorite Option</h1>
    
    <!-- Voting Form -->
    <form id="vote-form">
        <div id="options-container"></div>
        <button type="submit">Submit Vote</button>
    </form>
    
    <!-- Results Section -->
    <h2>Results</h2>
    <div id="results-container"></div>
    
    <!-- Templates -->
    <script id="options-template" type="text/x-handlebars-template">
        {{#each options}}
            <div>
                <input type="radio" id="{{this}}" name="vote" value="{{this}}">
                <label for="{{this}}">{{this}}</label>
            </div>
        {{/each}}
    </script>
    
    <script id="results-template" type="text/x-handlebars-template">
        {{#each results}}
            <div>{{@key}}: {{this}} votes</div>
        {{/each}}
    </script>
    
    <!-- JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const options = ["Option 1", "Option 2", "Option 3"];
            const results = {
                "Option 1": 0,
                "Option 2": 0,
                "Option 3": 0
            };
            
            const optionsTemplate = Handlebars.compile(document.getElementById('options-template').innerHTML);
            document.getElementById('options-container').innerHTML = optionsTemplate({ options });
            
            const resultsTemplate = Handlebars.compile(document.getElementById('results-template').innerHTML);
            document.getElementById('results-container').innerHTML = resultsTemplate({ results });
            
            document.getElementById('vote-form').addEventListener('submit', (event) => {
                event.preventDefault();
                const selectedOption = document.querySelector('input[name="vote"]:checked').value;
                if (selectedOption) {
                    results[selectedOption]++;
                    document.getElementById('results-container').innerHTML = resultsTemplate({ results });
                }
            });
        });
    </script>
    <script src="/js/vote.js"></script>
</body>
</html>

    